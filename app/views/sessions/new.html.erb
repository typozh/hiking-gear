<div class="auth-container">
  <div class="auth-card">
    <h1>Login to Hiking Gear Manager</h1>
    
    <%= form_with url: login_path, method: :post, local: true do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, required: true, autofocus: true, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, required: true, class: 'form-control' %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Login', class: 'btn-primary' %>
      </div>
    <% end %>

    <div class="auth-links">
      <p>Don't have an account? <%= link_to 'Sign up', signup_path %></p>
    </div>
  </div>
</div>
