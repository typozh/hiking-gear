<div class="page-header">
  <h1>üîó Map Your Columns</h1>
  <p>File: <strong><%= @filename %></strong></p>
</div>

<div class="mapping-container">
  <div class="instructions-card">
    <h3>üìù Instructions</h3>
    <p>Match each column from your file to a gear field. Columns you don't want to import can be set to "Skip".</p>
    <p><strong>Required:</strong> Name field must be mapped.</p>
  </div>

  <% if @categories.any? %>
    <div class="categories-reference">
      <h4>üìö Available Categories</h4>
      <div class="category-chips">
        <% @categories.each do |category| %>
          <span class="category-chip"><%= category.icon %> <%= category.name %></span>
        <% end %>
      </div>
      <p style="font-size: 0.9rem; color: #666; margin-top: 0.5rem;">
        Use these exact names in your Category column, or leave blank for no category.
      </p>
    </div>
  <% end %>

  <div class="preview-section">
    <h3>üìä Preview (first 5 rows)</h3>
    <div class="table-scroll">
      <table class="preview-table">
        <thead>
          <tr>
            <% @headers.each do |header| %>
              <th><%= header %></th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @preview_rows[1..5]&.each do |row| %>
            <tr>
              <% @headers.length.times do |i| %>
                <td><%= row[i] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <%= form_with url: process_gear_imports_path, method: :post, local: true, class: "mapping-form" do |f| %>
    <div class="mapping-grid">
      <div class="mapping-header">
        <div>Gear Field</div>
        <div>‚Üê</div>
        <div>Your Column</div>
      </div>

      <% @gear_fields.each do |field_key, field_label| %>
        <div class="mapping-row">
          <div class="column-name">
            <strong><%= field_label %></strong>
            <% if field_key == 'name' %>
              <span class="sample-value required-badge">required</span>
            <% end %>
          </div>
          
          <div class="arrow">‚Üê</div>
          
          <div class="field-select">
            <%= select_tag "mapping[#{field_key}]",
                options_for_select(
                  [['‚Äî skip / not in file ‚Äî', 'skip']] +
                  @headers.map { |h| [h, h] },
                  detect_field_name_for(@headers, field_key)
                ),
                class: 'mapping-select',
                data: { field: field_key }
            %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit "Import Gear Items", class: "btn-primary", data: { confirm: "This will create gear items from your file. Continue?" } %>
      <%= link_to "Back", new_gear_import_path, class: "btn-secondary" %>
      <%= link_to "Cancel", gear_items_path, class: "btn-secondary" %>
    </div>
  <% end %>
</div>

<% content_for :head do %>
<script>
document.addEventListener('DOMContentLoaded', function() {
  // Validate that name is mapped before submission
  document.querySelector('.mapping-form').addEventListener('submit', function(e) {
    const nameSelect = document.querySelector('[data-field="name"]');
    if (!nameSelect || nameSelect.value === 'skip') {
      e.preventDefault();
      alert('Please map a column to the "Name" field. Name is required for all gear items.');
      return false;
    }
  });
});
</script>
<% end %>

